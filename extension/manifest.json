{
  "manifest_version": 3,
  "name": "SPIDER OSINT Scanner",
  "version": "1.0",
  "description": "Анализ страницы одним кликом",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scan with SPIDER"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}